<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.um.roguetext.controller.ScoreController">
    <children>
        <Label fx:id="scoreLabel" text="Score View" />
        <Button fx:id="scoreButton" text="Increase by one" onAction="#increaseScore" />
        <Button fx:id="switchButton" text="Switch to Two" onAction="#switchToTwo" />
    </children>
</VBox>